<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    
</head>
<body>

    <div class="page-scroll">
        <div id="page_container" class="page-container full-width-container theme-style-light animated fadeInLeft" data-animation="fadeInLeft">
            <header id="site_header" class="header">
                <div class="header-content clearfix">

                    <!-- Text Logo -->
                    <div class="text-logo">
                        <a href="https://lmpixels.com/wp/leven-wp/full-width/">
                            <div class="logo-symbol">C</div>
                            <div class="logo-text">- sirias.com <span></span></div>
                        </a>
                        @*<h4 style="text-align:center">Software Developer</h4>*@
                    </div>
                    <!-- /Text Logo -->
                    <!-- Navigation -->
                    <div class="site-nav mobile-menu-hide">
                        <ul id="menu-classic-menu" class="leven-classic-menu site-main-menu">
                            <li id="menu-item-160" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home current-menu-item page_item page-item-157 current_page_item current-menu-ancestor current-menu-parent current_page_parent current_page_ancestor">
                                <a href="@Url.Action("Index","Home")" aria-current="page" data-hover="1">About Me</a>
                            </li>
                            <li id="menu-item-174" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-174"><a href="@Url.Action("Index","Home")" data-hover="1">Resume</a></li>
                            <li id="menu-item-28" class="menu-item menu-item-type-post_type menu-item-object-page">
                                <a href="@Url.Action("Index","Home")" data-hover="1">Portfolio</a>
                            </li>
                            <li id="menu-item-191" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-191"><a href="@Url.Action("Index","Home")" data-hover="1">Contact</a></li>
                        </ul>
                    </div>
                    <a class="menu-toggle mobile-visible">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>
            </header>
            <div id="main" class="site-main">
                <div class="single-page-content">
                    <div class="content-area">
                        <div class="page-content site-content single-post">
                            <div class="entry-content">
                                <div class="fw-page-builder-content">
                                    <section class="fw-main-row ">
                                        <div class="fw-container">
                                            @RenderBody()
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="site-footer clearfix">
                <div class="footer-social">
                    <ul class="footer-social-links">
                        <li>
                            <a href="https://www.linkedin.com/in/colver-sirias-mayorga-02623184/">LinkedIn</a>
                        </li>
                        <li>
                            <a href="https://github.com/c-siriasm">Github</a>
                        </li>
                        <li>
                            <a href="https://twitter.com/colversirias">Twitter</a>
                        </li>
                    </ul>
                </div>
                <div class="footer-copyrights">
                    <p>&copy;  @DateTime.Now.Year c-sirias.com</p>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)    
</body>
</html>
